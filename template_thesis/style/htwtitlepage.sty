\NeedsTeXFormat{LaTeX2e}
\ProvidesPackage{htwtitlepage}[2025/10/08 Title Page for HTW Papers]

% --------------------------------------------------------------------
% PACKAGE OPTIONS
% --------------------------------------------------------------------
% --------------------------------------------------------------------
% LANGUAGE HANDLING
% --------------------------------------------------------------------
% uses isGerman variable defined in upper scope! make sure you use htwstyle.sty!

% --------------------------------------------------------------------
% Titlepage Variables
% --------------------------------------------------------------------
\newcommand{\@ititle}{}
\newcommand{\@idocumenttype}{}
\newcommand{\@iuniversity}{}
\newcommand{\@ifaculty}{}
\newcommand{\@istudyprogramme}{}
\newcommand{\@isupervisorone}{}
\newcommand{\@isupervisortwo}{}
\newcommand{\@iauthor}{}
\newcommand{\@imatrnr}{}
\newcommand{\@idate}{}

\newcommand{\ititle}[1]{\renewcommand{\@ititle}{#1}}
\newcommand{\idocumenttype}[1]{\renewcommand{\@idocumenttype}{#1}}
\newcommand{\iuniversity}[1]{\renewcommand{\@iuniversity}{#1}}
\newcommand{\ifaculty}[1]{\renewcommand{\@ifaculty}{#1}}
\newcommand{\istudyprogramme}[1]{\renewcommand{\@istudyprogramme}{#1}}
\newcommand{\isupervisorone}[1]{\renewcommand{\@isupervisorone}{#1}}
\newcommand{\isupervisortwo}[1]{\renewcommand{\@isupervisortwo}{#1}}
\newcommand{\iauthor}[1]{\renewcommand{\@iauthor}{#1}}
\newcommand{\imatrnr}[1]{\renewcommand{\@imatrnr}{#1}}
\newcommand{\idate}[1]{\renewcommand{\@idate}{#1}}


\newcommand{\makeititle}{
\begin{titlepage}
\thispagestyle{empty} % no page number

% --- draw full-height left stripe ---
\begin{tikzpicture}[remember picture, overlay]
  \fill[HTWgreen] (current page.north west) rectangle ([xshift=3.8cm]current page.south west);
\end{tikzpicture}

% --- main text area shifted right ---
\vspace*{-1.0cm}
\hspace*{3.8cm}
\begin{minipage}{0.72\textwidth}

    % Logo (top)
    \begin{flushright}
        \includegraphics[width=0.33\textwidth]{images/HTW_Berlin_Logo_farbig.jpg}
    \end{flushright}
    \vspace{2cm}

    % Title
    {\Huge\bfseries \@ititle\par}
    \vspace{0.4cm}
    \textcolor{HTWgreen}{\rule{0.75\textwidth}{1pt}}
    \vspace{1.2cm}

    % Document type
    {\Large \@idocumenttype\par}
    \vspace{1.4cm}

    % University + faculty + programme
    \setstretch{1.25}
    \ifthenelse{\boolean{isGerman}}{%
        % \textit{an der}\\[0.4cm]
        {\large \@iuniversity}\\[0.4cm]
        \@ifaculty\\[0.4cm]
        Studiengang \textit{\@istudyprogramme}\\[1cm]
    }{%
        % \textit{at the}\\[0.4cm]
        {\large \@iuniversity}\\[0.4cm]
        \@ifaculty\\[0.4cm]
        Study programme: \textit{\@istudyprogramme}\\[1cm]
    }

    % Divider
    \textcolor{HTWgreen}{\rule{0.75\textwidth}{1pt}}
    \vspace{1.6cm}

    % Author
    \setstretch{1.15}
    \ifthenelse{\boolean{isGerman}}{Eingereicht von}{Submitted by}\\[0.3cm]
    {\Large \@iauthor}\\[0.4cm]
    \ifx\@imatrnr\@empty\else
        Matrikelnummer \@imatrnr\\[0.8cm]
    \fi

    % Date
    \vfill
    {\@date}

\end{minipage}

\end{titlepage}
}
